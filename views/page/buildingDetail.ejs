<%- include('../layouts/header', {title: 'ข้อมูลตึก'}); -%>
<%- include('../layouts/css'); -%>
<%- include('../layouts/endheader'); -%>
<div class="uk-flex">
    <%- include('../layouts/sideMenu'); -%>
    <div class="content-contianer">
        <div class="navbar">
            <div class="uk-flex">
                <div class="width-100 nav-left">
                    หน้าหลัก
                    <span uk-icon="chevron-right"></span> ข้อมูลตึก
                </div>
                <%- include('../layouts/navBar'); -%>
            </div>
        </div>

        <div class="content">
            <div style="text-align: center;">
                <div style="text-align: center; margin-bottom: 30px;"> <b style="font-size: 30px;"> แก้ไขข้อมูล </b>
                </div>

                <form class="uk-form-horizontal " style="margin-right:100px;" action="/building/managebuilding/update"
                    method="post">
                    <input type="hidden" name="_id" value="<%= buildingData._id %>">

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">รหัสตึก</label>
                        <div class="uk-form-controls">
                            <input class="uk-input " value="<%= buildingData.building_id %>" required maxlength="20" name="building_id" type="text"
                                placeholder="Default">
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">ชื่อตึก</label>
                        <div class="uk-form-controls">
                            <input class="uk-input " value="<%= buildingData.building_name %>" required maxlength="20" name="building_name" type="text"
                                placeholder="Default">
                        </div>
                    </div>
                 
                    <div class="uk-flex row uk-flex-center">
                        <div style="text-align: center;margin-right: 10px;">
                            <button type="submit" class="uk-button uk-button-default">ยืนยัน</button>
                        </div>
                        <div style="text-align: center; ">
                            <a href="/building/managebuilding" class="uk-button uk-button-default">ยกเลิก</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/javascript'); -%>
<%- include('../layouts/footer'); -%>